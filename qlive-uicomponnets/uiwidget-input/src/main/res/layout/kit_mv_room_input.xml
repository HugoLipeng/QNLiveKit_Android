<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    tools:background="#000000">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:minHeight="36dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="3dp"
        android:paddingEnd="12dp"


        >

        <ImageView
            android:id="@+id/voice_input_switch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/kit_action_audio_selector"
            android:visibility="gone" />

        <com.qlive.uikitinput.TIMMentionEditText
            android:id="@+id/chat_message_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"

            android:background="@drawable/kit_shape_26bdf3ff_16"
            android:gravity="center_vertical"
            android:hint="聊点什么吧..."
            android:maxHeight="120dp"
            android:maxLength="140"
            android:minHeight="30dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#ffffff"
            android:textColorHint="#999999"
            android:textCursorDrawable="@drawable/kit_my_cursor"
            android:textSize="11sp" />

        <Button
            android:id="@+id/chat_voice_input"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/kit_voice_btn_selector"
            android:text="hold to talk "
            android:textColor="#696969"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/face_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/kit_mv_emj" />

        <ImageView
            android:id="@+id/more_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/kit_action_more_selector"
            android:visibility="gone" />

        <TextView
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/kit_mv_shape_send"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="发送"
            android:textColor="#fff"
            android:textSize="10sp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <View
        android:id="@+id/tempView"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <com.qlive.uikitemoji.EmojiBoard
        android:id="@+id/emojiBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>


