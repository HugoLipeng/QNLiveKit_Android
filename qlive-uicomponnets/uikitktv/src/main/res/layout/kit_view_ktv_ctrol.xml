<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ktv_ctro"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llMusicInfoContainer"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCurrentSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="138dp"
            android:paddingStart="16dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            tools:text="aasadsa" />

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0/0"
            android:textSize="8sp"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/ivPause"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="2dp"
            android:src="@drawable/kit_ktv_play_select" />

        <ImageView
            android:id="@+id/ivTrack"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="8dp"
            android:src="@mipmap/kit_ic_ktv_yingui" />

        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:src="@mipmap/kit_ic_ktv_xiayigexiayishou" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivMusic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="end"
        android:padding="8dp"
        android:src="@mipmap/ic_ktv_music" />

</FrameLayout>